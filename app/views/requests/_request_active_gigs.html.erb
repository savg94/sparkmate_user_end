<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Active Gigs

    <a data-toggle="collapse" href="#request_active_gigs_new_form">
      Add gig
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @request.active_gigs.each do |gig| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to gig, gig %>

        <%= link_to gig, method: :delete, data: { confirm: "Do you really want to delete this gig" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="request_active_gigs_new_form">
        <%= render partial: "requests/request_active_gigs_new_form" %>
      </div>
    </div>

  </ul>
</div>
