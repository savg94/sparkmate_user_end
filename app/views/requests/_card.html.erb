<div class="card mb-3">
  <h2 class="card-header h4">
    Request #<%= request.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Pickup datetime</dt>
      <dd><%= request.pickup_datetime %></dd>

      <dt>Pickup location</dt>
      <dd>
        <div>
          <%= render partial: "requests/one_photo_map" %>
        </div>
      </dd>

      <dt>Dropoff datetime</dt>
      <dd><%= request.dropoff_datetime %></dd>

      <dt>Dropoff location</dt>
      <dd>
        <div>
          <%= render partial: "requests/one_photo_map" %>
        </div>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @request.user.present? %>
          <%= link_to request.user, request.user %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back request, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @request.user %>
          <%= link_to edit_request_url(request), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @request.user %>
          <%= link_to request, method: :delete, data: { confirm: "Do you really want to delete this request?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(request.updated_at) %> ago
  </div>
</div>
