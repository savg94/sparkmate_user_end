      <% if gig_was_invalid %>
        <% gig_class << " is-invalid" %>
      <% else %>
        <% gig_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :gig_id %>
    <!-- Input for gig_id start -->
    <%= f.number_field :gig_id, class: gig_class, placeholder: "Enter gig" %>
    <!-- Input for gig_id end -->
    <% if gig_was_invalid %>
      <% chat.errors.full_messages_for(:gig).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for gig_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
