<div class="card mb-3">
  <h2 class="card-header h4">
    Chat #<%= chat.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @chat.user.present? %>
          <%= link_to chat.user, chat.user %>
        <% end %>
      </dd>

      <dt>Provider</dt>
      <dd>
        <% if @chat.provider.present? %>
          <%= link_to chat.provider, chat.provider %>
        <% end %>
      </dd>

      <dt>Message</dt>
      <dd><%= chat.message %></dd>

      <dt>Gig</dt>
      <dd>
        <% if @chat.gig.present? %>
          <%= link_to chat.gig, chat.gig %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back chat, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @chat.user %>
          <%= link_to edit_chat_url(chat), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @chat.user %>
          <%= link_to chat, method: :delete, data: { confirm: "Do you really want to delete this chat?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(chat.updated_at) %> ago
  </div>
</div>
