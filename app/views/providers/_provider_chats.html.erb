<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Chats

    <a data-toggle="collapse" href="#provider_chats_new_form">
      Add chat
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @provider.chats.each do |chat| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to chat, chat %>

        <% if current_user == chat.user %>
          <%= link_to chat, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="provider_chats_new_form">
        <%= render partial: "providers/provider_chats_new_form" %>
      </div>
    </div>

  </ul>
</div>
