<!-- Form chat start -->
<%= form_with(model: @chat, local: true) do |f| %>
<!-- Form chat end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for provider_id start -->
  <div class="form-group">
    <%= f.label :provider_id %>

    <!-- Input for provider_id start -->
    <%= f.collection_select :provider_id, Provider.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for provider_id end -->
  </div>
  <!-- Label and input for provider_id end -->

  <!-- Label and input for message start -->
  <div class="form-group">
    <%= f.label :message %>

    <!-- Input for message start -->
    <%= f.text_field :message, class: "form-control" %>
    <!-- Input for message end -->
  </div>
  <!-- Label and input for message end -->

  <!-- Label and input for gig_id start -->
  <div class="form-group">
    <%= f.label :gig_id %>

    <!-- Input for gig_id start -->
    <%= f.text_field :gig_id, class: "form-control" %>
    <!-- Input for gig_id end -->
  </div>
  <!-- Label and input for gig_id end -->

  <%= f.submit "Create chat", class: "btn btn-block btn-outline-secondary" %>
<% end %>
